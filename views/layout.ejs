<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>MyQuiz</title>
		<link href="https://fonts.googleapis.com/css?family=Baloo+Tammudu" rel="stylesheet"> 
		<link rel='stylesheet' href="/build/styles.css"/>
	</head>
	<body>
		<div class="header">
			<div class="logo_hd">
				<a href="/">
					<img class="nav_logo" src="/images/logo.png" alt="MyQuiz Logo">
				</a>
			</div>
			<nav class="main" id="navbar" role="navigation">
				<ul class="mainnav">
					<li><a class="nav_link" data-hover="Inicio"href="/">Inicio</a></span></li>
					<li><a class="nav_link" data-hover="Preguntas"href="/quizes">Preguntas</a></li>
					<li><a class="nav_link" data-hover="Ayuda"href="/help" target:"_blank">Ayuda</a></li>
					<% if(!session.user){ %>
						<li><a class="nav_link login_link" data-hover="Login" href="/login">Login</a></li>
					<%}else{ %>
						<li><form class="blank" method="post" action="/login?_method=delete">
							<input type="text" name="logout" id="logout" value="true" style="display:none" class="hidden"/>
							<input id="logout-but" class="nav_link login_link" data-hover="Logout" name="Logout" value="Logout" type="submit">
						</form></li>
					<% }; %>
				</ul>
			</nav>
		</div>		
		<% if (typeof(errors) === undefined || null) {
		console.log('Layout error');%>
		<section class="main errors">
			<div id="errorLog">
				<h5>Â¡Error al procesar la solicitud!</h5>
				<% for(var i in errors){ %>
					<span><%= errors[i].message %></span><br>
				<% } %>
				</div>
		</section>
		<% } %>
		<%if(typeof feedback!== 'undefined') {%>
		<section class="main feedback">
			<div id="feedLog">
				<h5>Hecho!</h5>
				<% for(var i in feedback){ %>
					<span><%= feedback[i].msg %></span><br>
				<% } %>
				</div>
		</section>
		<% } %>
		<section>
			<%- body %>
		</section>
		<footer>
			MyQuiz Copyright
		</footer>
	</body>
</html>
