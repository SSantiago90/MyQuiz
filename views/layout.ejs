<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>MyQuiz</title>
		<link rel='stylesheet' href="/stylesheets/style.css"/>
	</head>
	<body>
		<header class="main" id="h1">
			<h2>myQuiz: El juego de Preguntas!</h2>
		</header>
		<nav class="main" id="navbar" role="navigation">
			<span><a href="/">Inicio</a></span>
			<span><a href="/quizes">Preguntas</a></span>
		</nav>		
		<%if(typeof errors !== 'undefined') {
		console.log('Layout error');%>
		<section class="main errors">
			<div id="errorLog">
				<h5>¡Error al procesar la solicitud!</h5>
				<% for(var i in errors){ %>
					<span><%= errors[i].message %></span><br>
				<% } %>
				</div>
		</section>
		<% } %>	
		<%if(typeof feedback!== 'undefined') {%>
		<section class="main feedback">
			<div id="feedLog">
				<h5>Hecho!</h5>
				<% for(var i in feedback){ %>
					<span><%= feedback[i].msg %></span><br>
				<% } %>
				</div>
		</section>
		<% } %>			
		<section>
			<%- body %>
		</section>
		<footer>
			<a target:"_blank" href="http://es.wikipedia.org/wiki/Quizz">¿Qué es un "Quiz"?</a>
		</footer>
	</body>
</html>